@page
@model Album.Areas.Admin.Pages.Role.DeleteModel
@{
   ViewData["Title"] = "Delete role";
}

<h1 class="h3 mb-1 text-gray-800">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <p>Are you sure to delete Role ? <strong>@Model.Input.Name</strong> </p>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden"  asp-for="Input.ID">
            <input type="hidden"  asp-for="isConfirmed">
            <a class="btn btn-primary" asp-page="./Index">List</a>
            <button type="submit" asp-page="./Delete" class="btn btn-outline-dark w-100 btn-lg">Delete</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

