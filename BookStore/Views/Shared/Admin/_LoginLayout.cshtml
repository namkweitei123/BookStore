<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/sbadmin/css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        .bg-login-image {
            background: black url(https://img.freepik.com/free-vector/technology-online-bookstore-people-standing-near-book-laptop-template-banner-flyer_82472-413.jpg?w=2000);
            background-position: center;
            background-size: contain ;
            background-repeat: no-repeat;
        }
    </style>
</head>
<body style="background-color: #f8f9fc">

    <div class="container-xl">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-12 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5 col-xl-12">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row" style="height: 656px;">
                            <div class="col-xl-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-xl-6" style="margin: auto">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/sbadmin/js/sb-admin-2.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>